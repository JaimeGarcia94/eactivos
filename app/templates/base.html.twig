<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}" type="text/css">
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
            <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <nav class="navbar navbar-expand-md navbar-light bg-white shadow-sm">
                <div class="container">
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        {% if app.user %}
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <a href="{{ path('auctions') }}" class="nav-link">Inicio</a>
                            </li>
                            {% if app.user.role == 'admin' %}
                            <li class="nav-item">
                                <a href="{{ path('auction_create') }}" class="nav-link">Crear subasta</a>
                            </li>
                            {% endif %}
                        </ul>
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <span class="nav-link">{{ app.user.name ~ ' ' ~ app.user.surname}}</span>
                            </li>
                            <li class="nav-item">
                                <a href="{{ path('logout') }}" class="nav-link">
                                    <i class="fa fa-sign-out fa-2x"></i>
                                </a>
                            </li>
                            {% else %}
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item">
                                    <a href="{{ path('login') }}" class="nav-link">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a href="{{ path('register') }}" class="nav-link">Registro</a>
                                </li>
                            </ul>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </nav>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
